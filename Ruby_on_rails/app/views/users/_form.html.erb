<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user.role == 'admin'%>
    <div>
      <%= form.label :matricula, style: "display: block" %>
      <%= form.text_field :matricula %>
    </div>

    <div>
      <%= form.label :nome, style: "display: block" %>
      <%= form.text_field :nome %>
    </div>

    <div>
      <%= form.label :role, style: "display: block" %>
      <%= form.text_field :role %>
    </div>
  <% end %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password, "#{user.new_record? ? 'Password' : 'New Password (optional)'}", style: "display: block" %>
    <%= form.password_field :password, 
                           class: "form-control" %>
  </div>

  <div>
    <%= form.label :password_confirmation, "#{user.new_record? ? 'Password Confirmation' : 'Confirm New Password (optional)'}", style: "display: block" %>
    <%= form.password_field :password_confirmation,
                           class: "form-control" %>
  </div>

  <div>
    <%= form.label :avatar, "Profile Picture: " %>
    <%= form.file_field :avatar, accept: 'image/*' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
