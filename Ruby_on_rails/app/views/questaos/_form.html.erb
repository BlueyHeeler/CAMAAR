<%= form_with(model: [@template, questao], local: true) do |form| %>
  <% if questao.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(questao.errors.count, "error") %> prohibited this questao from being saved:</h2>

      <ul>
        <% questao.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div id="questions-container">
    <div class="question-fields">
      <div>
        <%= form.label :enunciado, "Question Text", style: "display: block" %>
        <%= form.text_area :enunciado, name: "questaos[0][enunciado]" %>
      </div>

      <div>
        <%= form.label :texto, "Answer", style: "display: block" %>
        <%= form.text_area :texto, name: "questaos[0][texto]" %>
      </div>

      <button type="button" class="delete-question btn btn-danger" style="display: none;">Delete Question</button>
    </div>
  </div>

  <div class="actions mt-3">
    <%= form.submit "Save All Questions", class: "btn btn-primary" %>
  </div>
<% end %>
